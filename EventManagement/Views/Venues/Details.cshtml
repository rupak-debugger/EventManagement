@model EventManagement.Models.DomainModels.Venue

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Venue details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Venue
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.VenueId"><i class="fa fa-pencil"></i> Edit</a>
    <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-arrow-left"></i> Back to List</a>
</div>
