<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/partyicon.png" width="50" height="50" class="img-fluid rounded-circle" alt="">
                    Event Management
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light px-3" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                    
                        @if(User.IsInRole("admin"))
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link text-light pxx-3" asp-area="" asp-controller="EventInformations" asp-action="Index">Event-info</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light px-3" asp-area="" asp-controller="EventCategories" asp-action="Index">Event-category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light px-3" asp-area="" asp-controller="Venues" asp-action="Index">Venues</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light px-3" asp-area="" asp-controller="Accounts" asp-action="GetAppRoles">Approles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light px-3" asp-area="" asp-controller="Accounts" asp-action="GetAllUsers">User-Accounts</a>
                            </li>
                                                      
                        }
                        @if(User.IsInRole("manager"))
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link text-light px-3" asp-area="" asp-controller="EventInformations" asp-action="ManagerIndex">Events assigned</a>
                            </li>
                            
                        }
                    </ul>
                </div>
                <partial name="_LoginPartial"/>
            </div>
        </nav>
    </header>
   
    <div class="container">
        <main role="main" class="pb-3">
                @RenderBody()
        </main>
    </div>
    <br />
    <br />

    <footer class="border-top footer text-center">
        <div class="container">
                <i class="fa fa-facebook-f px-2" style="font-size:36px"></i>
                <i class="fa fa-instagram px-2" style="font-size:36px"></i>
                <i class="fa fa-linkedin px-2" style="font-size:36px"></i>
                <i class="fa fa-twitter px-2" style="font-size:36px"></i> <br />

            &copy; 2023 - Event Management - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-info">Privacy</a>  
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
